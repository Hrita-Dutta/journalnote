<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JournalNote.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Light Theme Colors (Default) -->
            <Color x:Key="PrimaryColor">#4A90E2</Color>
            <Color x:Key="SecondaryColor">#6C757D</Color>
            <Color x:Key="BackgroundColor">#F8F9FA</Color>
            <Color x:Key="SurfaceColor">#FFFFFF</Color>
            <Color x:Key="TextColor">#343A40</Color>
            <Color x:Key="TextSecondaryColor">#6C757D</Color>
            <Color x:Key="BorderColor">#DEE2E6</Color>
            <Color x:Key="SidebarColor">#343A40</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>