@page "/export"
@using JournalNote.Models
@using JournalNote.Services
@inject DatabaseService DatabaseService
@inject PdfExportService PdfExportService

<PageTitle>Export - JournalNote</PageTitle>

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1>Export Journal Entries</h1>
        <p class="lead">Export your journal entries to PDF by date range</p>
    </div>

    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Select Export Options</h5>
                    <hr />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Start Date</label>
                            <input type="date" 
                                   class="form-control" 
                                   @bind="startDate"
                                   max="@DateTime.Now.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">End Date</label>
                            <input type="date" 
                                   class="form-control" 
                                   @bind="endDate"
                                   max="@DateTime.Now.ToString("yyyy-MM-dd")">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Include in Export:</label>
                        <div class="form-check">
                            <input class="form-check-input" 
                                   type="checkbox" 
                                   @bind="includeMoods" 
                                   id="includeMoods">
                            <label class="form-check-label" for="includeMoods">
                                Include Moods
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" 
                                   type="checkbox" 
                                   @bind="includeTags" 
                                   id="includeTags">
                            <label class="form-check-label" for="includeTags">
                                Include Tags
                            </label>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">
                            @errorMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success">
                            @successMessage
                        </div>
                    }

                    <div class="d-grid gap-2">
                        <button class="btn btn-primary btn-lg" 
                                @onclick="ExportToPdf" 
                                disabled="@isExporting">
                            @if (isExporting)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                <span>Generating PDF...</span>
                            }
                            else
                            {
                                <span>Export Journal</span>
                            }
                        </button>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Quick Select</h5>
                    <hr />

                    <div class="row g-2">
                        <div class="col-md-3">
                            <button class="btn btn-outline-secondary w-100" @onclick="SelectLastWeek">
                                Last 7 Days
                            </button>
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-outline-secondary w-100" @onclick="SelectLastMonth">
                                Last 30 Days
                            </button>
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-outline-secondary w-100" @onclick="SelectThisMonth">
                                This Month
                            </button>
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-outline-secondary w-100" @onclick="SelectAllTime">
                                All Time
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@code {
    private DateTime startDate = DateTime.Now.AddDays(-7);
    private DateTime endDate = DateTime.Now;
    private bool includeMoods = true;
    private bool includeTags = true;
    private bool isExporting = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Test database connection
            await DatabaseService.GetAllEntriesAsync();
            System.Diagnostics.Debug.WriteLine("Export page initialized successfully");
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Export page initialization error: {ex.Message}");
            errorMessage = "Error loading export page. Please try again.";
        }
    }

    private async Task ExportToPdf()
    {
        errorMessage = string.Empty;
        successMessage = string.Empty;

        System.Diagnostics.Debug.WriteLine("Export button clicked");

        if (startDate > endDate)
        {
            errorMessage = "Start date must be before end date";
            return;
        }

        isExporting = true;
        StateHasChanged();

        try
        {
            System.Diagnostics.Debug.WriteLine($"Creating export request: {startDate} to {endDate}");

            var request = new ExportRequest
            {
                StartDate = startDate,
                EndDate = endDate,
                IncludeMoods = includeMoods,
                IncludeTags = includeTags
            };

            System.Diagnostics.Debug.WriteLine("Calling PdfExportService...");
            var filePath = await PdfExportService.ExportToPdfAsync(request);

            if (filePath == null)
            {
                errorMessage = "No entries found in the selected date range";
                System.Diagnostics.Debug.WriteLine("No entries found");
                return;
            }

            System.Diagnostics.Debug.WriteLine($"PDF created at: {filePath}");

            // Try to open the file
            try
            {
                await Launcher.OpenAsync(new OpenFileRequest
                {
                    File = new ReadOnlyFile(filePath)
                });

                successMessage = $"PDF exported successfully! File: {Path.GetFileName(filePath)}";
                System.Diagnostics.Debug.WriteLine("PDF opened successfully");
            }
            catch (Exception openEx)
            {
                System.Diagnostics.Debug.WriteLine($"Error opening PDF: {openEx.Message}");
                successMessage = $"PDF created successfully! Saved to: {filePath}";
            }
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Export error: {ex.Message}");
            System.Diagnostics.Debug.WriteLine($"Stack trace: {ex.StackTrace}");
            
            if (ex.InnerException != null)
            {
                System.Diagnostics.Debug.WriteLine($"Inner exception: {ex.InnerException.Message}");
            }

            errorMessage = $"Export failed: {ex.Message}";
        }
        finally
        {
            isExporting = false;
            StateHasChanged();
        }
    }

    private void SelectLastWeek()
    {
        try
        {
            endDate = DateTime.Now;
            startDate = DateTime.Now.AddDays(-7);
            System.Diagnostics.Debug.WriteLine("Selected last 7 days");
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error selecting last week: {ex.Message}");
        }
    }

    private void SelectLastMonth()
    {
        try
        {
            endDate = DateTime.Now;
            startDate = DateTime.Now.AddDays(-30);
            System.Diagnostics.Debug.WriteLine("Selected last 30 days");
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error selecting last month: {ex.Message}");
        }
    }

    private void SelectThisMonth()
    {
        try
        {
            endDate = DateTime.Now;
            startDate = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);
            System.Diagnostics.Debug.WriteLine("Selected this month");
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error selecting this month: {ex.Message}");
        }
    }

    private void SelectAllTime()
    {
        try
        {
            endDate = DateTime.Now;
            startDate = DateTime.Now.AddYears(-10);
            System.Diagnostics.Debug.WriteLine("Selected all time");
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error selecting all time: {ex.Message}");
        }
    }
}