@page "/themes"
@using JournalNote.Models
@using JournalNote.Services
@inject DatabaseService DatabaseService
@inject ThemeService ThemeService

<PageTitle>Themes - JournalNote</PageTitle>

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1>Theme Customization</h1>
        <p class="lead">Choose your favorite color theme</p>
    </div>

    <hr />

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;"></div>
            <p class="mt-3">Loading themes...</p>
        </div>
    }else
    {
        <div class="section mb-5">
            <h3 class="section-title">Predefined Themes</h3>

            <div class="themes-grid">
                @foreach (var theme in predefinedThemes)
                {
                    <div class="theme-card @(theme.Id == currentThemeId ? "active" : "")"
                         @onclick="() => SelectTheme(theme.Id)">

                        <div class="theme-preview">
                            <div class="preview-header" style="background-color: @theme.PrimaryColor"></div>
                            <div class="preview-body" style="background-color: @theme.SurfaceColor">
                                <div class="preview-text" style="color: @theme.TextColor"></div>
                                <div class="preview-text" style="color: @theme.TextColor"></div>
                                <div class="preview-accent" style="background-color: @theme.SecondaryColor"></div>
                            </div>
                        </div>

                        <div class="theme-info">
                            <h5 class="theme-name">@theme.Name</h5>
                            <div class="theme-colors">
                                <span class="color-dot" style="background-color: @theme.PrimaryColor" title="Primary"></span>
                                <span class="color-dot" style="background-color: @theme.SecondaryColor" title="Secondary"></span>
                                <span class="color-dot" style="background-color: @theme.BackgroundColor" title="Background"></span>
                            </div>
                        </div>

                        @if (theme.Id == currentThemeId)
                        {
                            <div class="active-badge">
                                <span>âœ“ Active</span>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    }

</div>

@code {
    private List<AppTheme> predefinedThemes = new();
    private List<AppTheme> customThemes = new();
    private int currentThemeId;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadThemes();
    }

    private async Task LoadThemes()
    {
        isLoading = true;

        try
        {
            var allThemes = await DatabaseService.GetAllThemesAsync();
            predefinedThemes = allThemes.Where(t => t.IsPredefined).ToList();
            customThemes = allThemes.Where(t => !t.IsPredefined).ToList();

            var settings = await DatabaseService.GetThemeSettingsAsync();
            currentThemeId = settings.SelectedThemeId;
        }
        catch (Exception ex)
        {
            await Application.Current.MainPage.DisplayAlert("Error", $"Failed to load themes: {ex.Message}", "OK");
        }
        finally
        {
            isLoading = false;
        }
    }
}
