@page "/search"
@using JournalNote.Models
@using JournalNote.Services
@using JournalNote.Components.Shared
@inject DatabaseService DatabaseService
@inject NavigationManager Navigation

<PageTitle>Search & Filter - JournalNote</PageTitle>

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1>üîç Search & Filter Entries</h1>
        <p class="lead">Find exactly what you're looking for</p>
    </div>

    <hr />

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;"></div>
            <p class="mt-3">Loading data...</p>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-4 mb-4">
                <AdvancedFilter
                    Filter="@filter"
                    AvailableMoods="@allMoods"
                    AvailableTags="@allTags"
                    OnFilterChange="@ApplyFilters" />

                <div class="card mt-4 shadow-sm">
                    <div class="card-body">
                        <h6 class="card-title">üìä Results Summary</h6>
                        <ul class="list-unstyled mt-3 mb-0">
                            <li class="mb-2"><strong>Total Entries:</strong> @allEntries.Count</li>
                            <li class="mb-2">
                                <strong>Filtered Results:</strong>
                                <span class="badge bg-primary ms-2">@filteredEntries.Count</span>
                            </li>
                            <li class="mb-2"><strong>Showing:</strong> @paginatedEntries.Count</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                @if (!filteredEntries.Any())
                {
                    <div class="alert alert-info text-center py-5">
                        <h4>üîé No Results Found</h4>
                        <p>Try adjusting your filters or search criteria.</p>
                        @if (filter.HasActiveFilters)
                        {
                            <button class="btn btn-primary" @onclick="ClearFilters">
                                Clear All Filters
                            </button>
                        }
                    </div>
                }
                else
                {
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0">Found @filteredEntries.Count entries</h5>
                        <select class="form-select w-auto" @onchange="OnSortChanged">
                            <option value="date-desc">Date (Newest First)</option>
                            <option value="date-asc">Date (Oldest First)</option>
                            <option value="title-asc">Title (A-Z)</option>
                            <option value="title-desc">Title (Z-A)</option>
                        </select>
                    </div>
                }
            </div>

        </div>
    }
</div>

@code {
    private string sortBy = "date-desc";

    private void OnSortChanged(ChangeEventArgs e)
    {
        sortBy = e.Value?.ToString() ?? "date-desc";
        SortEntries();
    }

    private void SortEntries()
    {
        filteredEntries = sortBy switch
        {
            "date-desc" => filteredEntries.OrderByDescending(e => e.Date).ToList(),
            "date-asc" => filteredEntries.OrderBy(e => e.Date).ToList(),
            "title-asc" => filteredEntries.OrderBy(e => e.Title).ToList(),
            "title-desc" => filteredEntries.OrderByDescending(e => e.Title).ToList(),
            _ => filteredEntries.OrderByDescending(e => e.Date).ToList()
        };

        paginatedEntries = filteredEntries.Take(10).ToList();
    }

    private void ClearFilters()
    {
        filter.Clear();
        ApplyFilters();
    }

    private List<JournalEntry> allEntries = new();
    private List<JournalEntry> filteredEntries = new();
    private List<JournalEntry> paginatedEntries = new();
    private List<Mood> allMoods = new();
    private List<Tag> allTags = new();

    private EntryFilter filter = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;

        try
        {
            allEntries = await DatabaseService.GetAllJournalEntriesAsync();
            allMoods = await DatabaseService.GetAllMoodsAsync();
            allTags = await DatabaseService.GetAllTagsAsync();

            ApplyFilters();
        }
        catch (Exception ex)
        {
            await Application.Current.MainPage.DisplayAlert("Error", $"Failed to load data: {ex.Message}", "OK");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ApplyFilters()
    {
        filteredEntries = new List<JournalEntry>(allEntries);
        paginatedEntries = filteredEntries.Take(10).ToList();
        StateHasChanged();
    }
}
