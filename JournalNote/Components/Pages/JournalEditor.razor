@page "/editor"
@page "/editor/{DateParam}"
@using JournalNote.Models
@using JournalNote.Services
@inject DatabaseService DatabaseService
@inject NavigationManager Navigation

<div class="journal-editor-container">
    <div class="editor-header">
        <h3>@GetHeaderTitle()</h3>
        <span class="entry-date">@SelectedDate.ToString("dddd, MMMM dd, yyyy")</span>
    </div>

    @if (isLoading)
    {
        <div class="loading-spinner">
            <p>Loading entry...</p>
        </div>
    }
    else
    {
        <div class="editor-form">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" 
                       id="title" 
                       class="form-control" 
                       @bind="currentEntry.Title" 
                       placeholder="Entry title..."
                       maxlength="200" />
            </div>

            <div class="form-group">
                <label for="content">Content (Markdown Supported)</label>
                <textarea id="content" 
                          class="form-control content-area" 
                          @bind="currentEntry.Content" 
                          placeholder="Write your thoughts here...  You can use Markdown formatting."
                          rows="15"></textarea>
                <small class="text-muted">
                    Markdown tips: **bold**, *italic*, # Heading, - List
                </small>
            </div>

            <div class="editor-actions">
                <button class="btn btn-primary" @onclick="SaveEntry" disabled="@isSaving">
                    @(isSaving ? "Saving..." : "Save Entry")
                </button>

                @if (currentEntry.Id != 0)
                {
                    <button class="btn btn-danger" @onclick="DeleteEntry" disabled="@isSaving">
                        Delete Entry
                    </button>
                }

                <button class="btn btn-secondary" @onclick="Cancel">
                    Cancel
                </button>
            </div>

            @if (! string.IsNullOrEmpty(statusMessage))
            {
                <div class="alert @(isError ? "alert-danger" :  "alert-success")" role="alert">
                    @statusMessage
                </div>
            }
        </div>
    }
</div>

@code {
    [Parameter]
    public string?  DateParam { get; set; }

    private JournalEntry currentEntry = new();
    private DateTime SelectedDate = DateTime.Today;
    private bool isLoading = true;
    private bool isSaving = false;
    private string statusMessage = string.Empty;
    private bool isError = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadEntry();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (! string.IsNullOrEmpty(DateParam) && DateTime.TryParse(DateParam, out DateTime parsedDate))
        {
            SelectedDate = parsedDate. Date;
        }
        else
        {
            SelectedDate = DateTime.Today;
        }

        await LoadEntry();
    }

    private async Task LoadEntry()
    {
        try
        {
            isLoading = true;
            statusMessage = string.Empty;

            var entry = await DatabaseService. GetEntryByDateAsync(SelectedDate);

            if (entry != null)
            {
                currentEntry = entry;
            }
            else
            {
                // Create new entry for this date
                currentEntry = new JournalEntry
                {
                    EntryDate = SelectedDate,
                    Title = string.Empty,
                    Content = string.Empty
                };
            }
        }
        catch (Exception ex)
        {
            statusMessage = $"Error loading entry: {ex.Message}";
            isError = true;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task SaveEntry()
    {
        try
        {
            isSaving = true;
            statusMessage = string.Empty;
            isError = false;

            // Validation
            if (string.IsNullOrWhiteSpace(currentEntry.Title))
            {
                statusMessage = "Please enter a title for your entry. ";
                isError = true;
                return;
            }

            if (string.IsNullOrWhiteSpace(currentEntry. Content))
            {
                statusMessage = "Please write some content for your entry.";
                isError = true;
                return;
            }

            // Ensure the entry date is set
            currentEntry.EntryDate = SelectedDate;

            await DatabaseService.SaveEntryAsync(currentEntry);

            statusMessage = currentEntry.Id == 0 
                ? "Entry created successfully!" 
                : "Entry updated successfully! ";
            isError = false;

            // Reload to get updated timestamps
            await Task.Delay(1000);
            await LoadEntry();
        }
        catch (Exception ex)
        {
            statusMessage = $"Error saving entry: {ex. Message}";
            isError = true;
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteEntry()
    {
        if (currentEntry.Id == 0)
            return;

        // Simple confirmation (we'll improve this later with a modal)
        if (!await ConfirmDelete())
            return;

        try
        {
            isSaving = true;
            await DatabaseService.DeleteEntryAsync(currentEntry);

            statusMessage = "Entry deleted successfully!";
            isError = false;

            await Task.Delay(1000);
            Navigation.NavigateTo("/");
        }
        catch (Exception ex)
        {
            statusMessage = $"Error deleting entry: {ex.Message}";
            isError = true;
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task<bool> ConfirmDelete()
    {
        // For now, return true.  Later we'll add a confirmation dialog
        return await Task.FromResult(true);
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/");
    }

    private string GetHeaderTitle()
    {
        return currentEntry. Id == 0 ? "New Journal Entry" : "Edit Journal Entry";
    }
}