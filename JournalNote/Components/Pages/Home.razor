@page "/"
@using JournalNote.Models
@using JournalNote.Services
@inject DatabaseService DatabaseService
@inject NavigationManager Navigation

<PageTitle>JournalNote - Home</PageTitle>

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1>📔 JournalNote</h1>
        <p class="lead">Your personal journaling companion</p>
    </div>

    <hr />

    <!-- Today's Journal Entry -->
    <div class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3>Today's Entry</h3>
            <small class="text-muted">@DateTime.Today.ToString("MMMM dd, yyyy")</small>
        </div>

        @if (isLoadingToday)
        {
            <div class="text-center py-4">
                <div class="spinner-border text-primary"></div>
            </div>
        }
        else if (todayJournalEntry != null)
        {
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@todayJournalEntry.Title</h5>

                    @if (todayJournalEntry.PrimaryMoodId.HasValue)
                    {
                        <p class="mb-2">
                            <strong>Mood:</strong> @GetMoodDisplayForEntry(todayJournalEntry)
                        </p>
                    }

                    <div class="card-text">
                        @((MarkupString)GetPreview(todayJournalEntry.Content, 150))
                    </div>

                    <button class="btn btn-primary mt-3"
                            @onclick="() => EditJournalEntry(todayJournalEntry.Date)">
                        View / Edit
                    </button>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info d-flex justify-content-between align-items-center">
                <span>No entry for today yet.</span>
                <button class="btn btn-success" @onclick="CreateTodayJournalEntry">
                    Create Today's Entry
                </button>
            </div>
        }
    </div>

    <!-- All Entries -->
    <div>
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3>
                All Entries
                <span class="badge bg-secondary">@allJournalEntries.Count</span>
            </h3>
            <button class="btn btn-success" @onclick="CreateNewJournalEntry">
                + New Entry
            </button>
        </div>

        @if (isLoadingAll)
        {
            <div class="text-center py-4">
                <div class="spinner-border text-primary"></div>
                <p class="mt-2">Loading entries...</p>
            </div>
        }
        else if (allJournalEntries.Any())
        {
            <div class="row g-3">
                @foreach (var entry in allJournalEntries)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title text-truncate">@entry.Title</h5>
                                <h6 class="text-muted">
                                    @FormatDate(entry.Date)
                                </h6>

                                @if (entry.PrimaryMoodId.HasValue)
                                {
                                    <p class="mb-2">
                                        <strong>Mood:</strong> @GetMoodDisplayForEntry(entry)
                                    </p>
                                }

                                <div class="card-text">
                                    @((MarkupString)GetPreview(entry.Content, 100))
                                </div>

                                <button class="btn btn-sm btn-outline-primary mt-2"
                                        @onclick="() => EditJournalEntry(entry.Date)">
                                    View / Edit
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-secondary text-center py-5">
                <h4>📝 No entries yet</h4>
                <p>Start your journaling journey today!</p>
                <button class="btn btn-primary" @onclick="CreateNewJournalEntry">
                    Create Your First Entry
                </button>
            </div>
        }
    </div>
</div>

@code {
    private List<JournalEntry> allJournalEntries = new();
    private JournalEntry? todayJournalEntry;
    private List<Mood> allMoods = new();

    private bool isLoadingToday = true;
    private bool isLoadingAll = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadJournalEntries();
    }

    private async Task LoadJournalEntries()
    {
        try
        {
            allMoods = await DatabaseService.GetAllMoodsAsync();

            todayJournalEntry = await DatabaseService
                .GetJournalEntryByDateAsync(DateTime.Today.ToString("yyyy-MM-dd"));

            allJournalEntries = await DatabaseService.GetAllJournalEntriesAsync();
        }
        catch
        {
            allJournalEntries.Clear();
            todayJournalEntry = null;
        }
        finally
        {
            isLoadingToday = false;
            isLoadingAll = false;
        }
    }

    private string GetMoodDisplayForEntry(JournalEntry entry)
    {
        var primary = allMoods.FirstOrDefault(m => m.Id == entry.PrimaryMoodId);
        if (primary == null) return "Unknown mood";

        var result = $"{primary.Icon} {primary.Name}";

        if (!string.IsNullOrWhiteSpace(entry.SecondaryMoodIds))
        {
            var ids = entry.SecondaryMoodIds
                .Split(',')
                .Select(s => int.TryParse(s.Trim(), out var id) ? id : (int?)null)
                .Where(id => id.HasValue)
                .Select(id => id!.Value)
                .ToList();

            var secondary = allMoods.Where(m => ids.Contains(m.Id)).ToList();
            if (secondary.Any())
            {
                result += " + " + string.Join(", ", secondary.Select(m => $"{m.Icon} {m.Name}"));
            }
        }

        return result;
    }

    private string GetPreview(string html, int maxLength)
    {
        if (string.IsNullOrWhiteSpace(html))
            return "<p>No content</p>";

        var text = System.Text.RegularExpressions.Regex
            .Replace(html, "<.*?>", " ")
            .Trim();

        if (text.Length <= maxLength)
            return $"<p>{text}</p>";

        return $"<p>{text.Substring(0, maxLength)}...</p>";
    }

    private string FormatDate(string date)
        => DateTime.TryParse(date, out var d)
            ? d.ToString("MMMM dd, yyyy")
            : date;

    private void CreateTodayJournalEntry() => Navigation.NavigateTo("/entry");
    private void CreateNewJournalEntry() => Navigation.NavigateTo("/entry");
    private void EditJournalEntry(string date) => Navigation.NavigateTo($"/entry/{date}");
}
