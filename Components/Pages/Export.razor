@page "/export"
@using JournalNote.Models
@using JournalNote.Services
@inject DatabaseService DatabaseService
@inject PdfExportService PdfExportService

<PageTitle>Export - JournalNote</PageTitle>

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1>üìÑ Export Journal</h1>
        <p class="lead">Export your journal entries to PDF by date range</p>
    </div>

    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Select Export Options</h5>
                    <hr />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Start Date</label>
                            <input type="date" 
                                   class="form-control" 
                                   @bind="startDate"
                                   max="@DateTime.Now.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">End Date</label>
                            <input type="date" 
                                   class="form-control" 
                                   @bind="endDate"
                                   max="@DateTime.Now.ToString("yyyy-MM-dd")">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Include in Export:</label>
                        <div class="form-check">
                            <input class="form-check-input" 
                                   type="checkbox" 
                                   @bind="includeMoods" 
                                   id="includeMoods">
                            <label class="form-check-label" for="includeMoods">
                                Include Moods
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" 
                                   type="checkbox" 
                                   @bind="includeTags" 
                                   id="includeTags">
                            <label class="form-check-label" for="includeTags">
                                Include Tags
                            </label>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">
                            @errorMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success">
                            <div class="d-flex justify-content-between align-items-start">
                                <div style="white-space: pre-line;">@successMessage</div>
                                @if (!string.IsNullOrEmpty(lastExportedFile))
                                {
                                    <button class="btn btn-sm btn-success ms-2" @onclick="ShareFile">
                                        üì§ Share
                                    </button>
                                }
                            </div>
                        </div>
                    }

                    <div class="d-grid gap-2">
                        <button class="btn btn-primary btn-lg" 
                                @onclick="ExportToPdf" 
                                disabled="@isExporting">
                            @if (isExporting)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                <span>Generating PDF...</span>
                            }
                            else
                            {
                                <span>üìÑ Export to PDF</span>
                            }
                        </button>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Quick Select</h5>
                    <hr />

                    <div class="row g-2">
                        <div class="col-md-3">
                            <button class="btn btn-outline-secondary w-100" @onclick="SelectLastWeek">
                                Last 7 Days
                            </button>
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-outline-secondary w-100" @onclick="SelectLastMonth">
                                Last 30 Days
                            </button>
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-outline-secondary w-100" @onclick="SelectThisMonth">
                                This Month
                            </button>
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-outline-secondary w-100" @onclick="SelectAllTime">
                                All Time
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(lastExportedFile))
            {
                <div class="alert alert-info mt-3">
                    <strong>üìÅ File Location:</strong><br/>
                    <small class="text-break">@lastExportedFile</small><br/>
                    <button class="btn btn-sm btn-info mt-2" @onclick="CopyPath">
                        üìã Copy Path
                    </button>
                </div>
            }

        </div>
    </div>
</div>

@code {
    private DateTime startDate = DateTime.Now.AddDays(-30);
    private DateTime endDate = DateTime.Now;
    private bool includeMoods = true;
    private bool includeTags = true;
    private bool isExporting = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private string lastExportedFile = string.Empty;

    private async Task ExportToPdf()
    {
        errorMessage = string.Empty;
        successMessage = string.Empty;
        lastExportedFile = string.Empty;

        System.Diagnostics.Debug.WriteLine(">>> EXPORT BUTTON CLICKED");

        if (startDate > endDate)
        {
            errorMessage = "Start date must be before end date";
            return;
        }

        isExporting = true;
        await InvokeAsync(StateHasChanged);

        try
        {
            await Task.Delay(100);

            var request = new ExportRequest
            {
                StartDate = startDate,
                EndDate = endDate,
                IncludeMoods = includeMoods,
                IncludeTags = includeTags
            };

            System.Diagnostics.Debug.WriteLine($"Request: {startDate:yyyy-MM-dd} to {endDate:yyyy-MM-dd}");

            var filePath = await PdfExportService.ExportToPdfAsync(request);

            if (string.IsNullOrEmpty(filePath))
            {
                errorMessage = "No entries found in the selected date range. Try selecting 'All Time'.";
                System.Diagnostics.Debug.WriteLine(">>> No file path returned");
                return;
            }

            lastExportedFile = filePath;
            System.Diagnostics.Debug.WriteLine($">>> File created: {filePath}");

            // Check if file exists
            var fileExists = File.Exists(filePath);
            System.Diagnostics.Debug.WriteLine($">>> File exists: {fileExists}");

            if (!fileExists)
            {
                errorMessage = "PDF file was not created. Please try again.";
                return;
            }

            // Try to open file
            try
            {
                await Launcher.OpenAsync(new OpenFileRequest
                {
                    File = new ReadOnlyFile(filePath),
                    Title = "Open Journal Export"
                });
                successMessage = "‚úÖ PDF exported and opened successfully!";
            }
            catch (Exception openEx)
            {
                System.Diagnostics.Debug.WriteLine($">>> Launcher error -1712: {openEx.Message}");
                successMessage = $"‚úÖ PDF created successfully!\nFile: {Path.GetFileName(filePath)}\n\nClick 'Share' to open or send the file.";
            }
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($">>> EXPORT EXCEPTION: {ex.Message}");
            errorMessage = $"Export failed: {ex.Message}";
        }
        finally
        {
            isExporting = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task ShareFile()
    {
        try
        {
            if (string.IsNullOrEmpty(lastExportedFile) || !File.Exists(lastExportedFile))
            {
                errorMessage = "File not found. Please export again.";
                return;
            }

            await Share.RequestAsync(new ShareFileRequest
            {
                Title = "Share Journal Export",
                File = new ShareFile(lastExportedFile)
            });
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($">>> Share error: {ex.Message}");
            errorMessage = $"Cannot share file: {ex.Message}";
        }
    }

    private async Task CopyPath()
    {
        try
        {
            await Clipboard.SetTextAsync(lastExportedFile);
            successMessage = "‚úÖ File path copied to clipboard!";
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($">>> Copy error: {ex.Message}");
        }
    }

    private void SelectLastWeek()
    {
        endDate = DateTime.Now;
        startDate = DateTime.Now.AddDays(-7);
    }

    private void SelectLastMonth()
    {
        endDate = DateTime.Now;
        startDate = DateTime.Now.AddDays(-30);
    }

    private void SelectThisMonth()
    {
        endDate = DateTime.Now;
        startDate = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);
    }

    private void SelectAllTime()
    {
        endDate = DateTime.Now;
        startDate = DateTime.Now.AddYears(-10);
    }
}